@import "../../style/icon.wxss";

page, body {
  background-image: linear-gradient(360deg, #fff, #79afff);
  height: 100%;
}

.top {
  width: 100%;
  height: 80rpx;
  /* background-image: linear-gradient(0deg,#58eff4,#79afff); */
  z-index: 999;
}

/* 天日期 */
.time {
  width: 100%;
  overflow: scroll;
  line-height: 10px;
  height: 35px;
  display: flex;
}

.time text {
  padding: 1% 3% 0 3%;
  text-align: center;
}

.seleData {
  border-bottom: 5rpx solid #79afff;
  box-shadow: 0px 0px 10px 0px #ccc;
}

.body {
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.list_image {
  width: 80rpx;
  height: 75rpx;
}

.list {
  /* transform:rotate(-3deg); */
  margin-top: 40rpx;
  margin-left: 5%;
  background-color: #fff;
  box-shadow: 0px 0px 10px 0px #e4e4e4;
  width: 90%;
  line-height: 100rpx;
  border-radius: 15rpx;
  font-size: 30rpx;
  height: 150%;
}

.tip {
  color: #000;
  font-size: 30rpx;
  margin-left: 3%;
  height: 60rpx;
  line-height: 90rpx;
}
