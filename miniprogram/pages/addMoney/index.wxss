/* miniprogram/pages/addMoney/index.wxss */
@import "../../style/icon.wxss";

.redbackgroun>view {
  background-image: linear-gradient(360deg, #43f3ea, #f7f7f7);
  border-radius: 20%;
}

.date_text {
  font-size: 30rpx;
  float: left;
  margin-left: 20rpx;
}

.date_picker {
  float: right;
  margin-right: 20rpx;
}

.date_picker button {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  border: none;
  /* background-color:rgb(121, 175, 255); */
  background-image: linear-gradient(360deg, #61daff, #79afff);
  color: #1c2438;

  /* margin-bottom: 10rpx; */
}

.sele-date {
  width: 100%;
  height: 50rpx;
}

.i-input {
  padding: 7px 15px;
  color: #495060;
}

.i-cell {
  position: relative;
  padding: 12px 15px;
  display: flex;
  background: #fff;
  align-items: center;
  line-height: 1.4;
  font-size: 14px;
  overflow: hidden;
}

.i-input-title {
  color: #495060;
  min-width: 65px;
  padding-right: 10px;
}

.i-cell-bd {
  flex: 1;
}

.i-input-input {
  flex: 1;
  line-height: 1.6;
  padding: 4px 0;
  min-height: 22px;
  height: auto;
  font-size: 14px;
}